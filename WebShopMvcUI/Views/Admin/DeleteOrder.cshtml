@model WebShopMvcUI.Models.Order

@{
    ViewBag.Title = "Delete Order";
}

<h2>Delete Order</h2>

<h3>Are you sure you want to delete this order?</h3>

<div>
    <h4>Order</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Order ID
        </dt>
        <dd class="col-sm-10">
            @Model.Id
        </dd>
        <dt class="col-sm-2">
            User ID
        </dt>
        <dd class="col-sm-10">
            @Model.UserId
        </dd>
        <dt class="col-sm-2">
            Status
        </dt>
        <dd class="col-sm-10">
            @Model.OrderStatus.StatusName
        </dd>
    </dl>

    @using (Html.BeginForm())
    {
        @Html.HiddenFor(model => model.Id)
        <button type="submit" class="btn btn-danger">Delete</button>
        <a href="@Url.Action("OrderList", "Admin")" class="btn btn-secondary">Cancel</a>
    }
</div>
